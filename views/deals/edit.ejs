<% include ../partials/header %>

<div class='container'>
    <div class='row'>
        <h1 class='addDealandComment'>Edit <%= deal.name %></h1>
        <div class='styleDealandComment'>
            <form action='/deal/<%= deal._id %>?_method=PUT' method='POST'>
                <div class='form-group'>
                    <input class='form-control' type='text' name='deal[name]' value='<%= deal.name %>'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' name='deal[dealurl]' value='<%= deal.dealurl %>'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' name='deal[dealimg]' value='<%= deal.dealimg %>'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' name='deal[description]' value='<%= deal.description %>'>
                </div>
                <div class='form-group'>
                    <button class='btn btn-lg btn-primary btn-block'>Submit</button>
                </div>
                
            </form>
            <a href='/'>Go Back</a>
        </div>
            
        
    </div>
        
</div>
    

<% include ../partials/footer %>